<%- include("header"); -%>
    <div class="box" id="heading">
        <h1><%= titleList %></h1>
    </div>

    <div class="box">
        
        <% newListItems.forEach((newListItem)=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name = "checkbox" value="<%= newListItem._id %>" onChange="this.form.submit()">
                    <p><%= newListItem.name %></p>
                </div>
                <input id="list12" type="hidden" name="listName" value="<%= titleList %>">
            </form>
        <% }); %> 

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name ="list" value="<%= titleList %>">+</button>
        </form>

    </div>
<%- include("footer"); -%>

